---
const { title, subtitle, columns = 3, items = [] } = Astro.props;
---

<section class="py-12">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">{title}</h2>
    {subtitle && <p class="text-lg text-center text-gray-600 mb-8">{subtitle}</p>}

    <div class={`grid grid-cols-1 md:grid-cols-${columns} gap-8`}>
      {
        items.map((item : HTMLAllCollection) => (
          <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <img src={item.image} alt={item.title} class="w-full h-48 object-cover" />
            <div class="p-4">
              <h3 class="text-xl font-semibold">{item.title}</h3>
              <p class="text-gray-600">{item.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
