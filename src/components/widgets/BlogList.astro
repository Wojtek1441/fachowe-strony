---
export interface Props {
  posts: Array<{
    slug: string;
    data: {
      title: string;
      description: string;
      date: string;
      image?: string;
    };
  }>;
}

const { posts } = Astro.props;
---

<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {
    posts.map((post) => (
      <a
        href={`/blog/${post.slug}`}
        class="block p-4 border border-gray-200 rounded-lg shadow-md hover:shadow-lg transition"
      >
        {post.data.image && (
          <img src={post.data.image} alt={post.data.title} class="w-full h-48 object-cover rounded-md mb-4" />
        )}
        <h2 class="text-xl font-semibold mb-2">{post.data.title}</h2>
        <p class="text-gray-600">{post.data.description}</p>
        <span class="text-sm text-gray-500 block mt-2">{new Date(post.data.date).toLocaleDateString('pl-PL')}</span>
      </a>
    ))
  }
</section>
