---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'O nas',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="O nas"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'O nas',
    }}
  >
    <Fragment slot="title">
      Tworzymy innowacyjne rozwiązania dla <br />
      <span class="text-accent dark:text-white highlight"> Twojego biznesu online</span>
    </Fragment>

    <Fragment slot="subtitle">
      Specjalizujemy się w projektowaniu nowoczesnych stron internetowych, sklepów online oraz aplikacji webowych i
      mobilnych. Nasze usługi obejmują również SEO, marketing i hosting.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Nasze osiągnięcia"
    stats={[
      { title: 'Lat doświadczenia', amount: '10' },
      { title: 'Zadowoleni klienci', amount: '500+' },
      { title: 'Wdrożone projekty', amount: '300+' },
      { title: 'Nagrody', amount: '15' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Nasze usługi"
    subtitle="Oferujemy kompleksowe usługi dostosowane do Twoich potrzeb."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Strony internetowe',
        description: 'Projektujemy i wdrażamy responsywne oraz estetyczne strony WWW.',
        icon: 'tabler:template',
      },
      {
        title: 'Sklepy online',
        description: 'Tworzymy sklepy internetowe na WooCommerce, Shopify i inne.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'SEO i marketing',
        description: 'Optymalizujemy strony pod kątem wyszukiwarek i prowadzimy kampanie reklamowe.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Nasze wartości"
    subtitle="Nasze podejście opiera się na profesjonalizmie, innowacyjności i dbałości o klienta."
    items={[
      { title: 'Indywidualne podejście', description: 'Dostosowujemy rozwiązania do Twoich potrzeb i wymagań.' },
      { title: 'Najwyższa jakość', description: 'Dbamy o perfekcyjne wykonanie każdego projektu.' },
      { title: 'Stałe wsparcie', description: 'Oferujemy pełne wsparcie techniczne i doradztwo.' },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Skontaktuj się z nami"
    tagline="Masz pytania?"
    columns={2}
    items={[
      {
        title: 'Czat online',
        description: 'Porozmawiaj z naszym konsultantem i uzyskaj szybką pomoc.',
        icon: 'tabler:messages',
      },
      {
        title: 'Zadzwoń do nas',
        description: 'Nasi specjaliści odpowiedzą na wszystkie Twoje pytania.',
        icon: 'tabler:phone',
      },
    ]}
  />
</Layout>
